@page
@model TaskRequestApp.Pages.TicketPage.OpenTicketModel
@{
}
<form method="post">
    @for (int i = 0; i <Model.OpenTickets.Count; i++)
    {
        <table>
            <tr>

                <td>
                    <input asp-for="OpenTickets[i].Subject" type="text" placeholder="subject" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].Description" type="text" placeholder="description" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].OpenDate"  placeholder="date" />
                </td>
                <td>
                    <a asp-page="./TechDetails" asp-route-id="@Model.OpenTickets[i].Id">Set Tech Details</a>
                </td>
            </tr>
        </table>
    }
</form>