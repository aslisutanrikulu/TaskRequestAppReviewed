@page
@model TaskRequestApp.Pages.TicketPage.AssignedTicketModel
@{
}

<form method="post">
    <table border="1" width="100%">
        <thead>
            <tr>
                <td>subject</td>
                <td>description</td>
                <td>assignee</td>
                <td>Assigned date</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.TicketInput.Count; i++)
            {
            <tr>
                <td>TicketInput[i].Subject</td>
                <td>TicketInput[i].Description</td>
                <td>Employees[i].Name</td>
                <td>TicketInput[i].AssigneeDate</td>
                <td>
                    <button type="submit"> asp-route-id="@Model.TicketInput[i].Id" asp-page-handler="close ticket">close ticket</button>
                </td>
            </tr>
            }
        </tbody>

    </table>

</form>